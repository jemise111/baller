<%= form_for([@court, @game]) do |f| %>
  <div class="error_list">
    <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <!-- Make date select prettier -->
  <div class="field">
    <%= f.label :start_at, 'Start Time' %><br>
    <%= f.datetime_select :start_at, :ampm => true, :minute_step => 15 %>
  </div>
  <div class="field">
    <%= f.label :capacity, 'Set a minimum number of players for this game to be on? (optional)' %><br>
    <%= f.number_field :capacity, in: 1..20 %>
  </div>
  <div class="field">
    <%= f.label :skill_level, 'Skill level (optional)' %><br>
    <%= f.number_field :skill_level, in: 1..3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
