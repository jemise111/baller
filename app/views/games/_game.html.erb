<div class="game_display">
  <p><%= "#{game.start_at.strftime("%a")} #{game.start_at.strftime("%D")} at #{game.start_at.strftime("%l:%M %P")}" %></p>
  <p>Minimum players:
    <%= game.capacity.nil? ? 'none' : game.capacity %>
  </p>
  <p>Skill level:
    <%= game.skill_level.nil? ? 'none' : game.skill_level %>
  </p>
  <% unless game.users.include?(current_user) || game.users.count >= 20 %>
    <%= link_to 'join this game', "/games/#{game.id}/add-current", {method: :post} %>
  <% end %>
  <div class="game_players">
    <ul>
      <% game.users.each do |user| %>
        <li>
          <% if current_user == user %>
            <%= link_to image_tag('x_icon.png'), "/games/#{game.id}/remove-current", {method: :post} %>
          <% end %>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
