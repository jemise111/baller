<!-- This is for admin display, not 'show' view -->
<div class="user_stat">
  <p><%= user.id %> | </p>
  <p><%= user.name %> | </p>
  <p><%= user.email %> | </p>
  <p><%= user.zip_code %> | </p>
  <p>Admin? <%= user.admin %> | </p>
  <p><%= link_to 'edit', edit_user_path(user) %></p>
  <p><%= link_to 'delete', user, method: :delete, data: {confirm: 'Are you sure? You cannot undo this action'} %></p>
</div>
